          <view class="pictureSty">
            <image src="{{urlStr}}show/images?fileName={{j.tx}}" mode="aspectFitll" wx:if="{{urlStr.length > 0}}"/>
          </view>
          <view class="nameSty">{{j.xm}}</view>
          <view class="contentSty">{{j.lxdh}}</view>
        </view>
      </block>
      <!--end 调解好评排行榜 -->


    </view>
  </view>
</view>