/*聊天气泡*/

.rylx {
  position: relative;
  width: 150px;
  background: #FFF;
  border-radius: 5px;
  margin-left: 10px;
  word-break: break-word;
  color:#000;
  padding-top: 18px;
  line-height: 20px;
  margin-top: 25px;
  height: auto;
  padding-bottom: 6%;
  padding-left: 2%;
}

.rylx::after {
  content: "";
  display: block;
  position: absolute;
  width: 0;
  height: 0;
  border: 8px solid transparent;
  border-right-color:#fff;
  top: 15px;
  left: -14px;
  margin-top: 10px;
}

.arrow {
  position: relative;
  left: 54%;
  width: 150px;
  background: #45A0EF;
